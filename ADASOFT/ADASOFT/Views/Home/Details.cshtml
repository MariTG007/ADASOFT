<h1>@Model?.Name</h1>

<div class="row">

     <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-4">
               @Html.DisplayNameFor(model => model.Users)
            </dt>
            <dd class="col-sm-8">
                &nbsp; @Html.DisplayFor(model => model.Users)
            </dd>
            @*<dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Price)
