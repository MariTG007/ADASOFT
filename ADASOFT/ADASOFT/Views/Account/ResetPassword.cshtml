@model ADASOFT.Models.ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
}
<div class="container">
<flash dismissable="true" />

<div class="row">
    <div class="col-md-4 offset-md-4">
       <center> <h1><i class="fa-solid fa-arrows-rotate"></i></h1> </center>
            <center> <h1>Reestablece tu contraseña</h1> </center>
       
         @*<div class="card-body bg-light" style="border-radius: 10px; border: 1px solid grey; width: 350px; height: 480px">*@
        <form method="post">
            <div asp-validation-summary="All"></div>
            <input type="hidden" asp-for="Token" />

            <div class="card-body bg-light" style="border-radius: 10px; border: 1px solid grey; width: 350px; height: 380px">
            <div class="form-group">
                <label asp-for="UserName"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group mt-2">
                <input type="submit" value="Resetear Contraseña" class="btn btn-outline-success" />
            </div>
        </form>
        <div class="text-success">
            <p>
                @ViewBag.Message
            </p>
        </div>
    </div>
</div>
</div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

