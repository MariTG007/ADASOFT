@model ADASOFT.Data.Entities.City

@{
    ViewData["Title"] = "Delete";
}

<h1>Borrar</h1>

<h3>¿Está seguro de querer borrar?</h3>
<div>
      <partial name="_CityDetails"/>
    
    <form asp-action="DeleteCity">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Borrar" class="btn btn-outline-danger" /> 
        <a asp-action="Details" asp-route-id="@Model?.State.Id" class="btn btn-outline-success">Regresar</a>
    </form>
</div>

