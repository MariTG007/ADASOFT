@model ADASOFT.Data.Entities.Course


@{
    ViewData["Title"] = "Details";
}
<div class="container">
<flash dismissable="true" />
<h1>Detalles</h1>
<div class="form-group">
    <b><label asp-for="Name" class="control-label"></label></b>
    <br />
            @Html.DisplayFor(model => model.Name)
       
    @*<input asp-for="Name" class="form-control" />*@
   @* <span asp-validation-for="Name" class="text-danger"></span>*@
</div>
<br />
<div> 
    <a asp-action="IndexCourse" class="btn btn-outline-success"><i class="fa-solid fa-arrow-rotate-left"></i> Regresar</a>
</div>
<hr />

<!-- Content Wrapper. Contains page content -->
<div class="row">
    <div class="col-md-6">
        <div class="container-fluid">
            <div class="card mt-2">
                <div class="card-header text-danger">
                    <i class="fa-solid fa-user-astronaut"></i>  <strong>Usuarios</strong>
                </div>
                <div class="card-body">
                    <div id="view-all">
                        @await Html.PartialAsync("_ViewAllUsers", Model)
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!--modal placeholder. Also you can place this modal form in the _Layout.cshtml-->
<div class="modal fade in" tabindex="-1" role="dialog" data-bs-backdrop="static" id="form-modal">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <h5 class="modal-title text-white"></h5>
                <button type="button" class="btn-close text-white" data-bs-dismiss="modal" aria-label="Close">                   
                </button>
            </div>
            <div class="modal-body">
            </div>
        </div>
    </div>
</div>
</div>
<partial name="_DeleteDialog" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="~/js/showmodal.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#ImagesTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json"
                },
                "aLengthMenu": [
                    [25, 50, 100, 200, -1],
                    [25, 50, 100, 200, "Todos"]
                ]
            });
                "aLengthMenu": [
                    [25, 50, 100, 200, -1],
                    [25, 50, 100, 200, "Todos"]
                ]
        });
    </script>

