@model ADASOFT.Data.Entities.StudentCourse

<table class="table table-striped table-responsive-md table-bordered smfont"  id="GradesTable">
    <colgroup>
        <col span="1" />
        <col span="1" />
        <col span="1" />
        <col span="1" />
        <col span="1" />
        <col span="1" />
        <col span="1" />
        <col span="1" />
    </colgroup>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Grades.FirstOrDefault().Percentage)
            </th>
             <th>
               @Html.DisplayNameFor(model => model.Grades.FirstOrDefault().Grades)
             </th>
             <th>
                <a onclick="showInPopup('@Url.Action("AddGrade", "StudentCourse", new { }, Context.Request.Scheme)' , 'Nuevo Curso')" class="btn btn-sm btn-primary text-white"><i class="fa fa-plus-circle"></i>Curso</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Grades)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Percentage)
            </td>
            <th>
                @Html.DisplayFor(modelItem => item.Grades)
           </th>
           <td>
                <a onclick="showInPopup('@Url.Action("EditGrade", "StudentCourse", new { id = item.Id }, Context.Request.Scheme)' , 'Actualizar Curso')" class="btn btn-sm btn-warning"><i class="fa fa-pencil-alt"></i> </a>
                <button data-id="@item.Id" class="btn btn-sm btn-danger deleteItem" data-bs-toggle="modal" data-bs-target="#deleteDialog"><i class="fa fa-trash"></i></button>
           </td>
        </tr>
        }
    </tbody>
</table>

