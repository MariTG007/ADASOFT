@model ADASOFT.Data.Entities.User

@{
    ViewData["Title"] = "Index";
}

<div>
   
    @*<a asp-action="Index" asp-route-id="@Model?.Id" class="btn btn-outline-success">Regresar</a>*@
</div>
<br/>
<h1>Cursos matriculados</h1>


 <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">

                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.StudentCourses.FirstOrDefault().Id)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.StudentCourses.FirstOrDefault().Course.Name)
                            </th>
                            @*<th>
                                @Html.DisplayNameFor(model => model.Attendantes.FirstOrDefault().C)
                            </th>*@
                           @* <th>
                                @Html.DisplayNameFor(model => model.Attendantes.FirstOrDefault().AttendantesNumber)
                            </th>*@
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.StudentCourses)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                <th>
                                @Html.DisplayFor(modelItem => item.Course.Name)
                                </th>
                                @*<th>
                                @Html.DisplayFor(model => model.Attendantes.FirstOrDefault().LastName)
                                </th>*@
                                @*<td>
                                    @Html.DisplayFor(modelItem => item.AttendantesNumber)
                                </td>*@
                                <td>
                                     <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary"><i class="fa-solid fa-circle-info"></i> </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

