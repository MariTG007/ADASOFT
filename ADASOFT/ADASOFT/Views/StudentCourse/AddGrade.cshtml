@model ADASOFT.Models.GradeViewModel

@{
    ViewData["Title"] = "AddGrade";
}

<h1>Ingresar</h1>

<h4>Nota</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="AddGrade">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StudentCourseId"/>
             <partial name="_Grade" />
            
            <div class="form-group mt-2">
                <input type="submit" value="Guardar" class="btn btn-outline-primary" />
            <a asp-action="DetailsGrade" asp-route-id="@Model?.StudentCourseId" class="btn btn-outline-success">Regresar</a>
           </div>
        </form>
    </div>
</div>

<div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


